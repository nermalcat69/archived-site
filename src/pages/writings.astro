---
import { getCollection } from "astro:content";
import dayjs from "dayjs";
import PostLink from "src/components/PostLink.astro";

import Center from "../components/Center.astro";
import PageHeader from "../components/PageHeader.astro";
import { smartquotes } from "../helpers/helpers";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = await getCollection("posts");
posts.sort((a, b) => {
  return dayjs(b.data.datePublished).isBefore(dayjs(a.data.datePublished))
    ? -1
    : 1;
});

const writingPosts = posts.filter(post => !post.data.category || post.data.category === "writing");
const socialPosts = posts.filter(post => post.data.category === "social");
const productPosts = posts.filter(post => post.data.category === "product");

const ITEMS_LIMIT = 4;
const limitedWritingPosts = writingPosts.slice(0, ITEMS_LIMIT);
const limitedSocialPosts = socialPosts.slice(0, ITEMS_LIMIT);
const limitedProductPosts = productPosts.slice(0, ITEMS_LIMIT);

const title = "My Writings";
const description = "Explore my thoughts on product building, social experiments, growth marketing, design, and life philosophy. A collection of writings from an indie hacker's journey.";
---

<BaseLayout title={title} description={description} includeFooter padBottom>
  <PageHeader title={title} description={description} />
  <Center>
    <section>
      <div class="section-header">
        <h2>Writing</h2>
      </div>
      {
        limitedWritingPosts.map((post) => (
          <PostLink
            url={`posts/${post.id}`}
            title={smartquotes(post.data.title)}
            description={smartquotes(post.data.description)}
            datePublished={post.data.datePublished}
            features={post.data.features}
          />
        ))
      }
              {writingPosts.length > ITEMS_LIMIT && (
                <a href="/writings/posts" class="view-all">View All ({writingPosts.length})</a>
              )}
    </section>
    
    <section>
      <div class="section-header">
        <h2>Social Experiments</h2>
        {socialPosts.length > ITEMS_LIMIT && (
          <a href="/writings/social" class="view-all">View All ({socialPosts.length})</a>
        )}
      </div>
      {
        limitedSocialPosts.map((post) => (
          <PostLink
            url={`posts/${post.id}`}
            title={smartquotes(post.data.title)}
            description={smartquotes(post.data.description)}
            datePublished={post.data.datePublished}
            features={post.data.features}
            logo={post.data.img?.src.src}
            showImageAbove={true}
          />
        ))
      }
    </section>

    <section>
      <div class="section-header">
        <h2>Product / Growth & Marketing</h2>
        {productPosts.length > ITEMS_LIMIT && (
          <a href="/writings/product" class="view-all">View All ({productPosts.length})</a>
        )}
      </div>
      {
        limitedProductPosts.map((post) => (
          <PostLink
            url={`posts/${post.id}`}
            title={smartquotes(post.data.title)}
            description={smartquotes(post.data.description)}
            datePublished={post.data.datePublished}
            features={post.data.features}
          />
        ))
      }
    </section>

  </Center>
</BaseLayout>

<style lang="scss">
  section {
    display: flex;
    flex-direction: column;
    gap: var(--space-l);

    & + section {
      margin-block-start: var(--space-3xl);
    }
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xs);
  }

  .view-all {
    font-size: var(--step--1);
    color: var(--gray-11);
    text-decoration: none;
    
    &:hover {
      color: var(--gray-12);
      text-decoration: underline;
    }
  }
</style>
