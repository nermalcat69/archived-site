---
import ProseLayout from "src/layouts/ProseLayout.astro";
import { readdir } from "node:fs/promises";
import { join } from "node:path";

const title = "Gallery";
const description = "A visual journey through my life and travels. Photos from Himachal Pradesh, Haryana, Delhi, and moments that matter to me as I build products and explore the world.";

interface ImageData {
    src: string;
    alt: string;
    orientation: "portrait" | "horizontal";
}

// Function to create layout patterns
function createLayoutPatterns(totalImages: number): ("portrait" | "horizontal")[] {
    const patterns: ("portrait" | "horizontal")[] = [];
    const patternTypes: ("portrait" | "horizontal")[][] = [
        // Pattern 1: 2 horizontal images
        ["horizontal", "horizontal"],
        // Pattern 2: 1 horizontal + 2 portrait
        ["horizontal", "portrait", "portrait"],
        // Pattern 3: 4 portrait images
        ["portrait", "portrait", "portrait", "portrait"]
    ];
    
    let remainingImages = totalImages;
    
    while (remainingImages > 0) {
        let availablePatterns = patternTypes.filter(pattern => pattern.length <= remainingImages);
        
        // If we have exactly 1 image left, make it portrait
        if (remainingImages === 1) {
            patterns.push("portrait");
            remainingImages--;
            continue;
        }
        
        // If we have exactly 3 images left, use pattern 2 (1 horizontal + 2 portrait)
        if (remainingImages === 3) {
            patterns.push(...patternTypes[1]);
            remainingImages -= 3;
            continue;
        }
        
        // Randomly choose from available patterns
        const randomPattern = availablePatterns[Math.floor(Math.random() * availablePatterns.length)];
        patterns.push(...randomPattern);
        remainingImages -= randomPattern.length;
    }
    
    return patterns;
}

// Function to create alt text from filename
function createAltText(filename: string): string {
    return filename
        .replace(/\.(jpg|jpeg|png|webp|heic)$/i, '')
        .replace(/[-_]/g, ' ')
        .replace(/\b\w/g, l => l.toUpperCase());
}

// Read images from public/gallery directory
let images: ImageData[] = [];

try {
    const galleryPath = join(process.cwd(), 'public', 'gallery');
    const files = await readdir(galleryPath);
    
    // Filter for only .webp and .JPG files
    const imageFiles = files
        .filter(file => /\.(webp|JPG)$/.test(file))
        .sort(); // Sort alphabetically
    
    // Create layout patterns for all images
    const orientations = createLayoutPatterns(imageFiles.length);
    
    // Create image data with assigned orientations
    images = imageFiles.map((file, index) => ({
        src: `/gallery/${file}`,
        alt: createAltText(file),
        orientation: orientations[index]
    }));
} catch (error) {
    console.error('Error reading gallery directory:', error);
    // Fallback images if directory doesn't exist
    images = [
        {
            src: "/gallery/img21.JPG",
            alt: "Sample Image",
            orientation: "portrait" as const,
        }
    ];
}


---

<ProseLayout title={title} description={description}>
    <div class="gallery" id="gallery">
        {
            images.map((image, index) => (
              <div class={`gallery-item ${image.orientation}`} data-index={index}>
                <img 
                    src={image.src} 
                    alt={image.alt} 
                    loading="lazy"
                    decoding="async"
                />
                <div class="overlay">
                  <p>{image.alt}</p>
                </div>
              </div>
            ))
          }
    </div>
</ProseLayout>

<style>


    .gallery {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-m);
        padding: var(--space-l) 0;
        grid-auto-rows: 250px;
        transition: all 0.3s ease;
    }



    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: var(--radius-m);
        transition: transform 0.3s ease;
        cursor: pointer;
    }

    .gallery-item.horizontal {
        grid-column: span 2;
        grid-row: span 1;
    }

    .gallery-item.portrait {
        grid-column: span 1;
        grid-row: span 1;
    }

    .gallery-item:hover {
        transform: translateY(-4px) scale(1.02);
        z-index: 10;
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: var(--radius-m);
        transition: transform 0.3s ease;
    }

    .gallery-item:hover img {
        transform: scale(1.05);
    }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
        color: white;
        padding: var(--space-m);
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }

    .gallery-item:hover .overlay {
        transform: translateY(0);
    }

    .overlay p {
        margin: 0;
        font-size: var(--step-0);
        font-weight: 500;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(211, 211, 211, 0.5);
        opacity: 0;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(8px);
    }

    .modal.active {
        display: flex;
        opacity: 1;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        position: relative;
        max-width: 90vw;
        max-height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        animation: modalSlideIn 0.3s ease;
        background: white;
        border-radius: var(--radius-l);
        padding: var(--space-l);
        box-shadow: var(--shadow-l);
    }

    @keyframes modalSlideIn {
        from {
            transform: scale(0.8) translateY(20px);
            opacity: 0;
        }
        to {
            transform: scale(1) translateY(0);
            opacity: 1;
        }
    }

    .close {
        position: absolute;
        top: var(--space-s);
        right: var(--space-s);
        color: var(--gray-11);
        font-size: 24px;
        font-weight: bold;
        cursor: pointer;
        z-index: 1001;
        transition: color 0.2s ease;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-s);
        background: var(--gray-3);
    }

    .close:hover {
        color: var(--gray-12);
        background: var(--gray-4);
    }

    #modalImage {
        max-width: 100%;
        max-height: calc(90vh - 160px);
        object-fit: contain;
        border-radius: var(--radius-s);
        box-shadow: var(--shadow-m);
    }

    .modal-info {
        color: var(--gray-12);
        text-align: center;
        margin-top: var(--space-m);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-m);
    }

    .modal-nav {
        display: flex;
        gap: var(--space-m);
        align-items: center;
    }

    .modal-nav button {
        background: var(--gray-3);
        color: var(--gray-12);
        border: 1px solid var(--gray-6);
        padding: var(--space-s) var(--space-m);
        border-radius: var(--radius-s);
        cursor: pointer;
        transition: all 0.2s ease;
        font-weight: var(--font-weight-medium);
    }

    .modal-nav button:hover {
        background: var(--gray-4);
        border-color: var(--gray-7);
        transform: translateY(-1px);
        box-shadow: var(--shadow-s);
    }

    .modal-nav button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    #imageCounter {
        color: var(--gray-11);
        font-size: var(--step--1);
        font-weight: var(--font-weight-medium);
        padding: 0 var(--space-s);
    }

    /* Mobile responsive adjustments */
    @media (max-width: 768px) {
        .gallery {
            gap: var(--space-s);
            grid-auto-rows: 200px;
        }

        .modal-content {
            max-width: 95vw;
            max-height: 95vh;
            padding: var(--space-m);
        }

        #modalImage {
            max-height: calc(95vh - 180px);
        }

        .modal-nav {
            flex-direction: column;
            width: 100%;
        }

        .modal-nav button {
            width: 100%;
        }

        #imageCounter {
            order: -1;
            margin-bottom: var(--space-s);
        }
    }

    @media (max-width: 480px) {
        .gallery {
            grid-template-columns: 1fr;
            gap: var(--space-s);
            grid-auto-rows: 180px;
        }
        
        .gallery-item.horizontal,
        .gallery-item.portrait {
            grid-column: span 1;
            grid-row: span 1;
        }


    }

    /* Ensure grid doesn't break with different orientations */
    @media (min-width: 769px) {
        .gallery:not(.single-column) {
            grid-template-columns: repeat(4, 1fr);
        }
    }
</style>

