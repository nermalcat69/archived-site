<style lang="scss">

  @keyframes press-start {
    0%,
    20% {
      transform: translateY(-20%);
    }

    50% {
      transform: translateY(-5%);
    }

    100% {
      transform: translateY(20%);
    }
  }

  .lcd-bg {
    fill: var(--synth-lcd-bg);
    stroke: var(--synth-stroke);
    stroke-width: 3px;
    vector-effect: non-scaling-stroke;
  }

  .lcd-highlight {
    fill: var(--synth-lcd-light);
  }

  .lcd-base {
    fill: var(--synth-lcd-medium);
  }

  .notehead,
  .synth-instrument .lcd-base {
    fill: var(--synth-lcd-dark);
  }

  // Start button
  .start {

    :global([data-enabled="true"]) & {
      display: none;
    }

    .lcd-base {
      fill: var(--synth-lcd-dark);
    }

    .lcd-base {
      animation: press-start 1s step-start infinite;
      &:nth-child(2) {
        animation-delay: 0.1s;
      }

      &:nth-child(3) {
        animation-delay: 0.2s;
      }

      &:nth-child(4) {
        animation-delay: 0.3s;
      }

      &:nth-child(5) {
        animation-delay: 0.4s;
      }
      &:nth-child(6) {
        animation-delay: 0.5s;
      }
    }
  }


</style>
