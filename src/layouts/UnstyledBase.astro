---
import "../styles/reset.css";
import "../styles/theme.css";

import { ClientRouter } from "astro:transitions";
import { join } from "node:path";
import { AstroFont } from "astro-font";
import LoadingIndicator from "astro-loading-indicator/component";

export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  ogAlt?: string;
}

const { title, description, ogImage, ogAlt } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageTitle = Astro.url.pathname === "/" ? title : `${title} Â· Arjun Aditya`;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="color-scheme" content="dark light" />
    <meta name="theme-color" content="#FCFCFC" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#111111"
    />
    <AstroFont
      config={[
        {
          name: "HEX Franklin",
          src: [
            {
              style: "normal",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "HEX_Franklin_v0.3_Variable.woff2"
              ),
            },
          ],
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
          cssVariable: "font-sans",
        },
        {
          name: "MonoLisa",
          src: [
            {
              style: "normal",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "MonoLisaVariableNormal.woff2"
              ),
            },
          ],
          display: "swap",
          selector: "code",
          fallback: "monospace",
          cssVariable: "font-mono",
        },
      ]}
    />
    <link rel="icon" href="/favicon.svg?v=4" type="image/svg+xml" />
    <link
      rel="icon"
      href="/favicon-light.png"
      type="image/png"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="icon"
      href="/favicon-dark.png"
      type="image/png"
      media="(prefers-color-scheme: dark)"
    />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="canonical" href={canonicalURL} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Arjun Aditya's Blog"
      href={new URL("rss.xml", Astro.site)}
    />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Arjun Aditya" />
    <meta
      property="og:image"
      content={ogImage ?? `${Astro.url.origin}/og/default.png`}
    />
    <meta
      property="og:image:alt"
      content={ogAlt ?? "Arjun Aditya builds products and designs for the web."}
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage ?? `${Astro.url.origin}/og/default.png`} />
    <meta name="twitter:image:alt" content={ogAlt ?? "Arjun Aditya builds products and designs for the web."} />
    <meta name="twitter:site" content="@ArjunShips" />
    <meta name="twitter:creator" content="@ArjunShips" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Person",
            "@id": "https://arjunaditya.xyz/#person",
            "name": "Arjun Aditya",
            "url": "https://arjunaditya.xyz",
            "image": {
              "@type": "ImageObject",
              "@id": "https://arjunaditya.xyz/arjun-aditya-in-himachal.webp",
              "url": "https://arjunaditya.xyz/og/default.png",
              "contentUrl": "https://arjunaditya.xyz/og/default.png",
              "width": 1200,
              "height": 630,
              "caption": "Arjun Aditya - Product Builder & Designer"
            },
            "description": "Product builder, designer, and developer who loves tech, design, and web scraping. Currently living in Himachal, building micro products and helping non-technical people interact with the internet better.",
            "jobTitle": "Product Builder & Designer",
            "worksFor": {
              "@type": "Organization",
              "name": "Independent"
            },
            "address": {
              "@type": "PostalAddress",
              "addressRegion": "Himachal Pradesh",
              "addressCountry": "India"
            },
            "sameAs": [
              "https://twitter.com/ArjunShips",
              "https://instagram.com/nermalcat69",
              "https://discord.gg/nermalcat69"
            ]
          },
          {
            "@type": "WebSite",
            "@id": "https://arjunaditya.xyz/#website",
            "url": "https://arjunaditya.xyz",
            "name": "Arjun Aditya",
            "description": "Product builder, designer, and developer who loves tech, design, and web scraping.",
            "publisher": {
              "@id": "https://arjunaditya.xyz/#person"
            },
            "inLanguage": "en-US",
            "image": {
              "@id": "https://arjunaditya.xyz/#personimage"
            }
          }
        ]
      }
    </script>
    <title>{pageTitle}</title>
    <ClientRouter />
    <LoadingIndicator color="var(--blue-9)" height="3px" threshold={600} />
    <script>
      import { inject } from "@vercel/analytics";
      inject();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
